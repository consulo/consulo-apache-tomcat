<idea-plugin>
	<id>consulo.apache.tomcat</id>
	<name>Apache Tomcat</name>
	<depends>consulo.java</depends>
	<depends>consulo.javaee</depends>

	<extensions defaultExtensionNs="com.intellij">
		<configurationType implementation="consulo.tomcat.run.TomcatConfigurationType" />
		<sdkType implementation="consulo.tomcat.sdk.TomcatSdkType" />
		<programRunner implementation="consulo.tomcat.run.TomcatDebugProgramRunner" order="before defaultDebugRunner" />
	</extensions>
</idea-plugin>